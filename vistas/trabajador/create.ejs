<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8" />
  <title>Crear Trabajador</title>
  <meta name="viewport" content="width=device-width, initial-scale=1" />

  <!-- Bootstrap 5 CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

  <style>
    body {
      padding-top: 4.5rem;
      background-color: #f8f9fa;
    }
    .form-container {
      max-width: 600px;
      margin: auto;
      background: #fff;
      padding: 2rem;
      border-radius: 10px;
      box-shadow: 0 0 10px rgba(0,0,0,0.1);
    }
  </style>
</head>
<body>

  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">Emprendedores</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Alternar navegaci√≥n">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ms-auto">
          <li class="nav-item">
            <a class="nav-link" href="/usuarios">Usuarios</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/trabajadores">Trabajadores</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/turnos">Turnos</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <!-- Formulario -->
  <div class="container">
    <div class="form-container">
      <h2 class="mb-4 text-center">üë∑ Crear Nuevo Trabajador</h2>

      <form action="/trabajadores" method="POST">
        <div class="mb-3">
          <label for="nombre" class="form-label">Nombre</label>
          <input type="text" id="nombre" name="nombre" class="form-control" required placeholder="Ingrese el nombre">
        </div>

        <div class="mb-3">
          <label for="puesto" class="form-label">Puesto</label>
          <input type="text" id="puesto" name="puesto" class="form-control" required placeholder="Ingrese el puesto">
        </div>

        <div class="mb-3">
          <label for="email" class="form-label">Correo Electr√≥nico</label>
          <input type="email" id="email" name="email" class="form-control" required placeholder="Ingrese el correo electr√≥nico">
        </div>

        <!-- Campo opcional: horarios (puedes expandirlo m√°s adelante) -->
        <!--
        <div class="mb-3">
          <label class="form-label">Horarios (opcional)</label>
          <input type="text" name="horarios[0][dia]" class="form-control mb-2" placeholder="D√≠a">
          <input type="time" name="horarios[0][entrada]" class="form-control mb-2" placeholder="Entrada">
          <input type="time" name="horarios[0][salida]" class="form-control mb-2" placeholder="Salida">
        </div>
        -->

        <div class="d-flex justify-content-between">
          <a href="/trabajadores" class="btn btn-secondary">‚Üê Cancelar</a>
          <button type="submit" class="btn btn-success">üíæ Guardar</button>
        </div>
      </form>
    </div>
  </div>

  <!-- Bootstrap 5 JS Bundle -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
