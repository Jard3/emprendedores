<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title>Lista de Usuarios</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <!-- Bootstrap 5 CDN -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

  <style>
    body {
      padding-top: 4.5rem;
      background-color: #f8f9fa;
    }
    .table-actions a {
      margin-right: 0.5rem;
    }
  </style>
</head>
<body>

  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">Emprendedores</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ms-auto">
          <li class="nav-item">
            <a class="nav-link active" href="/usuarios">Usuarios</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/trabajadores">Trabajadores</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/turnos">Turnos</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <!-- Contenido principal -->
  <div class="container">
    <h1 class="mb-4 text-center">üë§ Lista de Usuarios</h1>

    <div class="mb-3 text-end">
      <a href="/usuarios/crear" class="btn btn-primary">‚ûï Crear Nuevo Usuario</a>
    </div>

    <div class="table-responsive">
      <table class="table table-bordered table-hover align-middle bg-white">
        <thead class="table-dark">
          <tr>
            <th>Nombre</th>
            <th>Email</th>
            <th class="text-center">Acciones</th>
          </tr>
        </thead>
        <tbody>
          <% if (usuarios.length === 0) { %>
            <tr>
              <td colspan="3" class="text-center text-muted">No hay usuarios registrados.</td>
            </tr>
          <% } else { %>
            <% usuarios.forEach(usuario => { %>
              <tr>
                <td><%= usuario.nombre %></td>
                <td><%= usuario.email %></td>
                <td class="text-center table-actions">
                  <a href="/usuarios/<%= usuario._id %>/editar" class="btn btn-sm btn-warning">‚úèÔ∏è Editar</a>
                </td>
              </tr>
            <% }); %>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>

  <!-- Bootstrap JS (opcional para navbar) -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
